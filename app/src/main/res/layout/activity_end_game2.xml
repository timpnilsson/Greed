<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey"
    android:id="@+id/rel"
    tools:context="com.example.tim.greed.EndGameActivity">
    <TextView
        android:id="@+id/textRound"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="25dp"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:text="@string/pointText"
        />
    <TextView
        android:id="@+id/nbrOfRounds"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="25dp"
        android:background="@color/white"
        android:textColor="@color/grey"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/textRound"

        />
    <TextView
    android:id="@+id/textPoints"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:textAlignment="gravity"
    android:textSize="25dp"
    android:background="@color/grey"
    android:textColor="@color/black"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/nbrOfRounds"
    android:text="@string/numText"/>

    <TextView
        android:id="@+id/totScore"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textPoints"
        android:gravity="center"
        android:textSize="25dp"
        android:textAlignment="gravity"
        android:background="@color/white"
        android:textColor="@color/grey"/>
    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totScore"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/test"
        android:textColor="@color/white"
        android:text="@string/newGame"

        />
        />

</RelativeLayout>
